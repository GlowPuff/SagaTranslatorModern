<local:PanelBase
	x:Class="Saga_Translator_V2.CampaignItemsPanel"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:local="clr-namespace:Saga_Translator_V2"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	d:DesignHeight="450"
	d:DesignWidth="800"
	mc:Ignorable="d">

	<Grid Margin="10">
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width=".3*" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="*" />
		</Grid.ColumnDefinitions>

		<TreeView
			x:Name="mainTree"
			Grid.Column="0"
			HorizontalAlignment="Stretch"
			VerticalAlignment="Stretch"
			Background="{x:Null}"
			Foreground="White"
			SelectedItemChanged="mainTree_SelectedItemChanged" />

		<GridSplitter
			Grid.Column="1"
			Width="5"
			Margin="5,0,5,0"
			HorizontalAlignment="Center"
			VerticalAlignment="Stretch"
			Background="#808aab" />

		<ScrollViewer
			Grid.Column="2"
			Margin="10,0,10,10"
			VerticalScrollBarVisibility="Auto">
			<UniformGrid Grid.Column="2" Columns="2">
				<!--  TRANSLATION  -->
				<StackPanel x:Name="translatePanel" Margin="0,0,10,0" />

				<!--  ENGLISH  -->
				<StackPanel x:Name="englishPanel" Margin="10,0,0,0" />
			</UniformGrid>
		</ScrollViewer>
	</Grid>

</local:PanelBase>